<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/style/navbar.css" />
    <link rel="stylesheet" href="/assets/style/navbarResponsive.css" />
    <link rel="stylesheet" href="/assets/style/index.css" />
    <link rel="stylesheet" href="/assets/style/indexResponsive.css" />
    <link rel="stylesheet" href="/assets/style/project.css" />
    <!-- <link rel="stylesheet" href="assets/style/testimonialResponsive.css" /> -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .active { font-weight: bolder; } .form-label { font-weight: bold; } body {
      background-color: rgba(225, 232, 235, 0.658); } .btn-secondary:hover {
      background-color: orange; transition: 0.5s; }
    </style>
    <title>Project Detail</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home">
          <img
            src="/assets/images/dumbways.png"
            style="width: 50px; margin-left: 20px; margin-right: 20px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link me-3" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/project">Add
                Project</a>
            </li>
          </ul>
          <div class="d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item">
                  <a class="nav-link fw-bold active text-danger">Hello,
                    {{user}}</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              {{/if}}
            </ul>
            <a class="btn btn-secondary btn-submit ms-5" href="/contact">Contact
              Me</a>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <div style="margin: 50px; text-align: center;">
        <h1>{{projectById.projectName}}</h1>
      </div>
      <div class="contentDetail">
        <div class="upper">
          <div class="leftDetail">
            <img src="/uploads/{{projectById.imageUrl}}" alt="projectImage" />
          </div>
          <div class="rightDetail" style="margin-top: 12px;">
            <div>
              <h2>Duration</h2>
              <p>
                <i class="fa-solid fa-calculator fa-lg"></i>
                12 jan 2024 - 11 feb 2024
              </p>
              <p><i class="fa-regular fa-clock fa-lg"></i> 1 month</p>
            </div>
            <div class="techno">
              <h2>Technologies</h2>
              <div class="upperIcons">
                <p><i class="fa-brands fa-react fa-lg"></i> React JS</p>
                <p><i class="fa-brands fa-square-js fa-lg"></i> JavaScript</p>
              </div>
              <div class="btmIcons">
                <p><i class="fa-brands fa-node fa-lg"></i> Node JS</p>
                <p><i class="fa-solid fa-shuttle-space fa-lg"></i> Socket IO</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bottom">
          <div class="description">
            <p>
              {{projectById.description}}
            </p>
          </div>
        </div>
      </div>

    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>