<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/style/navbar.css" />
    <link rel="stylesheet" href="/assets/style/navbarResponsive.css" />
    <link rel="stylesheet" href="/assets/style/index.css" />
    <link rel="stylesheet" href="/assets/style/indexResponsive.css" />
    <!-- <link rel="stylesheet" href="assets/style/testimonialResponsive.css" /> -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .active { font-weight: bolder; } .form-label { font-weight: bold; } body {
      background-color: rgba(225, 232, 235, 0.658); } .btn-secondary:hover {
      background-color: orange; transition: 0.5s; }
    </style>
    <title>Project Detail</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home">
          <img
            src="/assets/images/dumbways.png"
            style="width: 50px; margin-left: 20px; margin-right: 20px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a
                class="nav-link active me-3"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/project">Add
                Project</a>
            </li>
          </ul>
          <a href="/contact" class="btn btn-secondary">Contact Me</a>
        </div>
      </div>
    </nav>
    <main>
      <h1 style="text-align: center; margin-top: 20px">Project Detail</h1>
      <div class="container my-5">
        <div class="row">
          <!-- Start of Card -->
          <div class="col-md-4 mb-4 mt-4">
            <div class="card">
              <img
                src="/assets/images/red.jpg"
                class="card-img-top"
                alt="Project Image"
              />
              <div class="card-body">
                <h5 class="card-title">

                  {{projectById.title}}
                  -
                  {{projectById.createdAt}}

                </h5>
                <p style="font-size: small;">
                  Durasi : 3 Bulan
                </p>
                <div class="projectIcons" style="margin: 10px;">
                  <i class="fa-brands fa-node fa-lg" style="color: blue;"></i>
                  <i class="fa-brands fa-js fa-lg" style="color: blue;"></i>
                  <i class="fa-brands fa-react fa-lg" style="color: blue;"></i>
                  <i class="fa-brands fa-vuejs fa-lg" style="color: blue;"></i>
                </div>
                <p class="card-text" style="text-align: justify;">
                  {{projectById.content}}
                </p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>