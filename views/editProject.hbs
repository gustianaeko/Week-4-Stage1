<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <style>
      .active { font-weight: bolder; } .form-label { font-weight: bold; } body {
      background-color: rgba(225, 232, 235, 0.658); } .btn-secondary:hover {
      background-color: orange; transition: 0.5s; }
    </style>
  </head>
  <body>
    <!-- navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="/assets/images/dumbways.png"
            style="width: 50px; margin-left: 20px; margin-right: 20px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link me-3" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="project">Edit
                Project</a>
            </li>
          </ul>
          <a href="contact" class="btn btn-secondary">Contact Me</a>
        </div>
      </div>
    </nav>

    <!-- end navbar -->

    <!-- form -->

    <form
      style="display: flex; flex-direction: column; align-items: center"
      class="formTest"
      action="/editProject/{{projectById.id}}"
      method="post"
    >
      <h1 class="text-center mt-5 mb-5">UPDATE PROJECT</h1>

      <div style="width: 500px">
        <div class="mb-3">
          <label for="title" class="form-label">Project Name</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="{{projectById.title}}"
          />
        </div>

        <div class="form-row" style="display: flex; font-weight: bold">
          <div class="form-group col-md-5 me-5 mt-3">
            <label for="startDate">Start Date</label>
            <input
              type="date"
              class="form-control"
              id="startDate"
              name="startDate"
              value="{{projectById.startDate}}"
            />
          </div>
          <div class="form-group col-md-5 mt-3">
            <label for="endDate">End Date</label>
            <input
              type="date"
              class="form-control"
              id="endDate"
              name="endDate"
              value="{{projectById.endDate}}"
            />
          </div>
        </div>

        <div class="mt-3">
          <label for="content" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="content"
            style="height: 100px; min-width: 100%;"
            name="content"
            value="{{projectById.content}}"
          >
            {{projectById.content}}
          </textarea>
        </div>

        <!-- technologies -->
        <div class="mt-3">
          <label class="form-label">Technologies</label>
          <div class="row">
            <div class="col">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="nodeJs"
                  name="nodeJs"
                />
                <label class="form-check-label" for="nodeJs">Node Js</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="reactJs"
                  name="reactJs"
                />
                <label class="form-check-label" for="reactJs">React Js</label>
              </div>
            </div>
            <div class="col">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="nextJs"
                  name="nextJs"
                />
                <label class="form-check-label" for="nextJs">Next Js</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="typeScript"
                  name="typeScript"
                />
                <label
                  class="form-check-label"
                  for="typeScript"
                >TypeScript</label>
              </div>
            </div>
          </div>
        </div>
        <!-- uploadImg -->
        <div class="mb-5 mt-3">
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" class="form-control" id="image" name="image" />
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-secondary">Update Project</button>
        </div>
      </div>
    </form>

    <!-- end form -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>